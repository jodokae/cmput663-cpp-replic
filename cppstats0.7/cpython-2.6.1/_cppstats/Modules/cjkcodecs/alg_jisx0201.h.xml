<unit xmlns="http://www.sdml.info/srcML/src" xmlns:cpp="http://www.sdml.info/srcML/cpp" language="C" filename="Modules/cjkcodecs/alg_jisx0201.h"><cpp:define>#<cpp:directive>define</cpp:directive> <cpp:macro><name>JISX0201_R_ENCODE</name><parameter_list>(<param><type><name>c</name></type></param>, <param><type><name>assi</name></type></param>)</parameter_list></cpp:macro> <cpp:value>if ((c) &lt; 0x80 &amp;&amp; (c) != 0x5c &amp;&amp; (c) != 0x7e) (assi) = (c); else if ((c) == 0x00a5) (assi) = 0x5c; else if ((c) == 0x203e) (assi) = 0x7e;</cpp:value></cpp:define>
<cpp:define>#<cpp:directive>define</cpp:directive> <cpp:macro><name>JISX0201_K_ENCODE</name><parameter_list>(<param><type><name>c</name></type></param>, <param><type><name>assi</name></type></param>)</parameter_list></cpp:macro> <cpp:value>if ((c) &gt;= 0xff61 &amp;&amp; (c) &lt;= 0xff9f) (assi) = (c) - 0xfec0;</cpp:value></cpp:define>
